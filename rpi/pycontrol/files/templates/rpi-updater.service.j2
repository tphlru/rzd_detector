[Unit]
Description=GitHub Updater
After=network.target
StartLimitIntervalSec=0

[Service]
Type=simple
WorkingDirectory=/home/{{ homeusername }}/rpi/
ExecStart=/usr/bin/python3 /home/{{ homeusername }}/rpi/rpi-updater.py
Restart=always
RestartSec=1
StartLimitBurst=5
User={{ homeusername }}

[Install]
WantedBy=multi-user.target